computeLRVCovMatrix <- function(y, bandwidth) {
			n <- nrow(y)  # Number of observations
			p <- ncol(y)  # Number of variables (columns)
			lags <- floor(bandwidth * n)  # Maximum lag based on bandwidth and sample size
			
			# Demean the data
			y_demeaned <- sweep(y, 2, colMeans(y))
			
			# Initialize the LRVCov matrix
			lrv_cov_matrix <- matrix(0, nrow = p, ncol = p)
			
			# Compute the contemporaneous covariance matrix (lag 0)
			lrv_cov_matrix <- (t(y_demeaned) %*% y_demeaned) / n
			
			# Loop over lags to compute autocovariances
			for (lag in 1:lags) {
				weight <- 1 - lag / (lags + 1)  # Bartlett kernel weight
				
				# Calculate the lagged covariance matrices
				lagged_cov_positive_lag <- (t(y_demeaned[1:(n-lag), ]) 
				%*% y_demeaned[(lag+1):n, ]) /n
				lagged_cov_negative_lag <- (t(y_demeaned[(lag+1):n, ]) 
				%*% y_demeaned[1:(n-lag), ]) /n
				
				#  lagged_cov_negative_lag <- t( lagged_cov_positive_lag)
				# Add weighted autocovariances (positive and negative lags)
				lrv_cov_matrix <- lrv_cov_matrix + weight * (lagged_cov_positive_lag
				+ lagged_cov_negative_lag)
			}
			
			return(lrv_cov_matrix)
		}
