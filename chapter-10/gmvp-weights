# Function to compute Global Minimum Variance Portfolio (GMVP) weights
compute_mvp_weights_simple <- function(cov_matrix) {
  n <- nrow(cov_matrix)              # Number of assets
  ones <- rep(1, n)                  # Vector of ones
  inv_cov_matrix <- solve(cov_matrix)  # Inverse of the covariance matrix
  
  # Compute numerator and denominator for the GMVP formula
  num <- inv_cov_matrix %*% ones
  den <- t(ones) %*% inv_cov_matrix %*% ones
  
  # Calculate GMVP weights
  weights <- num / as.numeric(den)
  
  return(weights)
}     
